<odoo>
  <data>
    <!-- explicit list view definition -->


    <record id="task_tree_view" model="ir.ui.view">
      <field name="name">List Task</field>
      <field name="model">task.manager</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="deadline" />
          <field name="employee_id" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->


    <record model="ir.actions.act_window" id="action_task">
      <field name="name">Task Management</field>
      <field name="res_model">task.manager</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- <menuitem name="Task managerment" id="employee_menu_root" /> -->

      <menuitem name="List Task" id="task_list_menu" parent="employee_management.employee_menu_root" action="action_task" />


  </data>
</odoo>