<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale_template5">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="header" >
                <div class="row">
                    <div class="col-xs-3 text-left" position="left" >
                        <table style="vertical-align:baseline;table-layout:fixed;">
                            <tr>
                                <td>
                                    <img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' %  to_text(doc.company_id.logo)" style="max-height: 150px;"  class="pull-left img-responsive" position="left" />
                                </td>
                            </tr>
                        </table>
                        <!-- <br/>
                        <br/>
                        <div style="color:#FF6600" >
                            <span> 
                                <strong style="" t-field="doc.company_id.partner_id"/>
                            </span>
                        </div>
                        <div t-field="doc.company_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/> -->
                    </div>
                    <div  class="col-xs-4 text-center" position="center">
                         <table style="vertical-align:baseline;margin-left:18.75em;table-layout:fixed;">
                            <tr>
                                <td>
                                    <div t-if="docs.state not in ['draft','sent']" t-attf-style="color:#2E59B0;vertical-align:middle; font-weight:bold;">
                                        <span><strong><h1>SALE ORDER</h1></strong></span>
                                    </div>
                                    <div t-if="docs.state in ['draft','sent']" t-attf-style="color:#2E59B0;vertical-align:middle; font-weight:bold;">
                                        <span> <strong><h1>QUOTATION</h1></strong></span>
                                    </div>
                                    <div t-attf-style="vertical-align:middle;">
                                        <b><h6>Date: <span t-field="docs.expected_date" t-options="{'widget': 'date'}"/></h6></b>
                                    </div>
                                    <div t-attf-style="vertical-align:middle;">
                                        <b><h6>Quo. No: <span t-field="docs.name"/></h6></b>
                                    </div>
                                    <div style="border: 1px; border-color:#2E59B0; border-style: groove;"/>
                                </td>
                            </tr>
                         </table>
                    </div>
                    <div class="col-xs-3 text-right" position="right">
                        <table style="vertical-align:baseline;margin-left:18.75em;table-layout:fixed;">
                            <tr>
                                <td>
                                    <span> 
                                         <strong style="" t-field="doc.company_id.partner_id"/>
                                     </span>
                                    <div t-field="doc.company_id.partner_id"
                                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="body">
                <t t-call="web.basic_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-6 text-left">
                            <table class="table" style=" table-layout:fixed;">
                                <tr>
                                    <strong>Customer Address: </strong>
                                    <div t-attf-style="color:#2E59B0;">
                                        <span>
                                            <strong t-field="doc.partner_id"/>
                                        </span>
                                    </div>
                                    <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    <p t-if="docs.partner_id"><em>ATT</em>: <span t-field="docs.partner_id"/></p>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-6 text-right"  position="right">
                            <table class="table" style=" table-layout:fixed;margin-left:80em">
                                <tr>
                                    <strong>
                                        <t t-if="docs.partner_shipping_id == docs.partner_invoice_id">Invoice and shipping address:</t>
                                        <t t-if="docs.partner_shipping_id != docs.partner_invoice_id">Invoice address:</t>
                                    </strong>
                                    <div t-attf-style="color:#2E59B0;">
                                        <span>
                                            <strong t-field="docs.partner_invoice_id"/>
                                        </span>
                                    </div>
                                    <div t-field="docs.partner_invoice_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True }'/>
                                    <p t-if="docs.partner_id.vat">VAT: <span t-field="docs.partner_id.vat"/></p>
                                    <div t-if="docs.partner_shipping_id != docs.partner_invoice_id" class="mt8">
                                        <strong>Shipping address:</strong>
                                        <div t-attf-style="color:#2E59B0;" t-field="doc.company_id"/>
                                        <div t-field="docs.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True,"phone_icons": True}'/>
                                        <p t-if="docs.partner_id.vat">VAT: <span t-field="docs.partner_id.vat"/></p>
                                    </div>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div style="border: 1px; border-color:#2E59B0; border-style: groove;"/>
                    <br/>
                    <div class="row">
                        <div class="col-xs-12">
                            <table class="table table-bordered" t-attf-style="background-color:#2E59B0; color:{{data['sale_font_color']}}!important;">
                                <tbody >
                                    <tr style="border-style: solid !important;">
                                        <td  t-if="docs.user_id.name" style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="15%"><i class="fa fa-user" aria-hidden="true"></i> Sales Person:<br/>
                                            <span  t-field="docs.user_id"/>
                                        </td>
                                        <td t-if="docs.date_order" style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="8%"><i class="fa fa-calendar" aria-hidden="true"></i> Order Date:<br/>
                                            <span  t-field="docs.date_order" t-options="{'widget': 'date'}"/>
                                        </td>
                                        <td t-if="docs.expected_date" style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="8%"><i class="fa fa-calendar" aria-hidden="true"></i> Requested Date:<br/>
                                            <span t-field="docs.expected_date" t-options="{'widget': 'date'}"/>
                                        </td>
                                        <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="8%"><i class="fa fa-phone" aria-hidden="true"></i> Tel:<br/>
                                             <span t-field="doc.company_id.partner_id" t-options='{"widget": "contact", "fields": ["phone"], "no_marker": True}'/>
                                        </td>
                                        <td style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="8%"><i class="fa fa-fax" aria-hidden="true"></i> Fax:<br/>
                                             <span t-field="doc.company_id.partner_id" t-options='{"widget": "contact", "fields": ["phone"], "no_marker": True}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-xs-12">
                            <t t-set="has_tax" t-value="docs.order_line.filtered('tax_id')"/>
                            <!-- <t t-set="has_disc" t-value="docs.order_line.filtered('discount')"/> -->
                            <table class="table table-condensed table table-striped">
                                <thead t-attf-style="background-color:#2E59B0; color:{{data['sale_font_color']}}!important;" >
                                    <tr>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="5%">
                                            <font t-aff-style="color:{{data['sale_font_color']}}!important;"> <i class="fa fa-sort-numeric-asc" aria-hidden="true"></i> Item</font>
                                        </th>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="10%">
                                           <font t-aff-style="color:{{data['sale_font_color']}}!important;"><i class="fa fa-barcode" aria-hidden="true"/> Barcode</font>
                                        </th>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="15%">
                                            <font><i class="fa fa-edit" aria-hidden="true"/> Internal References</font>
                                        </th>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="15%">
                                            <font><i class="fa fa-edit" aria-hidden="true"/> Product Name</font>
                                        </th>
                                         <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="10%">
                                            <font><i class="fa fa-edit" aria-hidden="true"/> QTY</font>
                                        </th>
                                       <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="8%">
                                          <font><i class="fa fa-sort-amount-asc" aria-hidden="true"/> Unit</font>
                                        </th> 
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="12%">
                                            <font>
                                                <i class="fa fa-dollar" aria-hidden="true"/> Unit Price<br/>
                                                <em>(<span t-field="doc.currency_id.name"/>)</em>
                                            </font>
                                        </th>
                                        <t t-if="has_tax">
                                            <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="20%">
                                                <font><i class="fa fa-tags" aria-hidden="true"/> Taxes</font>
                                            </th>
                                        </t>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="25%">
                                            <font>
                                                <i class="fa fa-dollar" aria-hidden="true"/> Total Price<br/>
                                                <em>(<span t-field="doc.currency_id.name"/>)</em>
                                            </font>
                                        </th>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="8%">
                                          <font><i class="fa fa-edit" aria-hidden="true"/> Note</font>
                                        </th> 
                                    </tr>
                                
                                <tbody  class="sale_tbody">
                                    <t t-set="j" t-value="1"/>
                                    <t t-foreach="docs.order_line" t-as="l">
                                        <tr style="page-break-inside:avoid;margin-top:5%">
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;"  class="text-center">
                                                <span t-esc="j" />
                                                <t t-set="j" t-value="j+1" />
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-center">
                                                <!-- <span t-field="l.product_id.barcode"/> -->
                                                <span>__________</span>
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-center">
                                                <!-- <span t-field="l.product_id.name"/> -->
                                                <span>__________</span>
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-left">
                                                <span t-field="l.product_id.name"/>
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                <span t-field="l.product_uom_qty"/>
                                                <span t-field="l.product_uom" groups="product.group_uom"/>
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-center">
                                                <!-- <span t-field="l.product_id.name"/> -->
                                                <span>__________</span>
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                <span t-field="l.price_unit"/>
                                            </td>
                                            <t t-if="has_tax">
                                                <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                                </td>
                                            </t>
                                            <!-- <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right" groups="sale.group_show_price_subtotal"> -->
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                <span t-field="l.price_subtotal" t-options='{ "widget": "monetary", "display_currency": docs.pricelist_id.currency_id}'/>
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-center">
                                                <!-- <span t-field="l.product_id.name"/> -->
                                                <span>__________</span>
                                            </td>
                                        </tr>
                                    </t>  
                                </tbody>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <p style="page-break-before:avoid;"/>
                    <div class="row">
                        <div class="col-xs-6 text-left" position="left">
                            <table>
                                <tr>
                                    <td>
                                        <strong><ins>Note</ins>:</strong>
                                    </td>
                                    <td>
                                        <br/>
                                        <em>1) Delivery: within <mark style="color:red;">18-20</mark> working days upon receipt of the P.O.</em><br/>
                                        <em>2) Tax: 10% V.A.T. Not included </em><br/>
                                        <em>3) Validity: the quotation is valid for 20 days</em><br/>
                                        <em>4) Payment: initial 50% deposit is required, the remaining balance is due 30 days after receiving products.</em><br/>
                                        <em>5) Delivery term: EXW</em><br/>
                                        <span t-field="docs.note"/>
                                    </td>
                                </tr>
                            </table>
                            <div style="border: 1px; border-color:#2E59B0; border-style: groove;"/>
                        </div>
                        <div class="col-xs-6 text-left" position="right">
                            <table class="table table-striped" style="margin-left:50%">
                                <tr class="" style="border:3px; border-color:#2E59B0">
                                    <td  width="38%">
                                        <strong>Total without Taxes</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="docs.amount_untaxed" t-field-options='{ "widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr >
                                    <td width="38%">Taxes</td>
                                    <td class="text-right">
                                        <span t-field="docs.amount_tax" t-field-options='{ "widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr t-attf-style="background-color:#2E59B0;color:{{data['sale_font_color']}}!important;">
                                    <td width="38%">
                                        <strong>Total </strong>
                                        <em>(<span t-field="docs.currency_id.name"/>)</em>
                                    </td>
                                    <td class="text-right">
                                        <strong>
                                            <span t-field="docs.amount_total" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                        </strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                   
                    </div>
                    <p style="page-break-before:avoid;"/>
                    <div class="row">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-3">
                            <table>
                                <tr>
                                    <td class="text-center">
                                        <p style="margin-right:50em"><h5><strong>THE BUYER'S CONFIRMATION</strong></h5></p>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-2">
                        </div>
                        <div class="col-xs-3">
                            <table>
                                <tr>
                                    <td class="text-center">
                                        <p style="margin-left:25em"><h5><strong>CNCTECH</strong></h5></p><br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
         
            <div class="footer" position="left;">
                <div style="border: 1px; border-color:#2E59B0; border-style: groove;"/>
                <div class="text-muted">
                    <div class="row">
                    <div class="col-xs-3 text-left" position="left">
                        <table style="vertical-align:baseline;table-layout:fixed;">
                            <tr>
                                <td>
                                    <t t-if="doc.company_id.name_report_sale">
                                    <span t-field="doc.company_id.name_report_sale"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.date_report_prd">Date Issue:
                                    <span t-field="doc.company_id.date_report_sale"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.rev_report_prd">Revision:
                                    <span t-field="doc.company_id.rev_report_sale"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-4 text-center" position="center">
                        <table style="vertical-align:baseline;margin-left:18.75em;table-layout:fixed;">
                            <tr>
                                <td>
                                    <t t-if="doc.company_id.partner_id.website">
                                    <i class="fa fa-globe" aria-hidden="true"/>
                                    <span t-field="doc.company_id.website"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.partner_id.email">
                                    <i class="fa fa-envelope-o" aria-hidden="true"/>
                                    <span t-field="doc.company_id.email"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.partner_id.phone">
                                    <i class="fa fa-phone" aria-hidden="true"/>
                                    <span t-field="doc.company_id.phone"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                     </div>
                    <div class="col-xs-3 text-right" position="right">
                        <table style="vertical-align:baseline;margin-left:18.75em;table-layout:fixed;">
                            <tr>
                                <td>
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M:%S')"/>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <span t-field="docs.user_id"/> 
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    Page: <span class="page"/>/<span class="topage" />    
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                </div>
            </div>
        </template>
    </data>
</odoo>