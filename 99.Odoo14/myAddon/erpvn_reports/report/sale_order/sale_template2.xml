<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale_template2">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="header" >
                <div class="row">
                    <div class="col-xs-6 text-left">
                        <div t-attf-style="color:{{data['secondary_color']}}!important;" >
                            <span> 
                                <strong style="" t-field="doc.company_id.partner_id"/>
                            </span>
                        </div>
                        <div t-field="doc.company_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "city", "state_id", "country_id", "phone"], "no_marker": true}'/>
                    </div>
                    <div class="col-xs-6 text-right" >
                        <img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' %  to_text(doc.company_id.logo)" style="max-height: 150px;margin-left:300%"  class="pull-left img-responsive" position="right" />
                    </div>
                </div>
                <div class="row">
                    <t t-if="doc.company_id.watermark_selection == 'custom_name' and doc.company_id.add_watermark == True ">
                        <div style="position:absolute;opacity:0.11;z-index:1000;-webkit-transform:rotate(-45deg);width:100%; height:100%; top: 450px; ">
                            <p t-field="doc.company_id.custom_watermark_name" style="font-size:250px; "/>
                        </div>
                    </t>
                    <t t-if="doc.company_id.watermark_selection == 'company_logo' and doc.company_id.add_watermark == True ">
                        <div style="position:absolute;opacity:0.11;z-index:1000;-webkit-transform:rotate(-45deg);width:100%; height:100%; top: 400px;">
                            <img t-att-src="'data:image/png;base64,%s' %  to_text(doc.company_id.logo) " style="height:500px;"/>
                        </div>
                    </t>
                </div>
            </div>
            <div class="body">
                <t t-call="web.basic_layout">
                <div class="page">
                    <div class="row" >
                        <div class="col-xs-6 text-center">
                            <table class="table table-condensed table table-striped" >
                                <tr>
                                    <td t-attf-style="color:{{data['sale_font_color']}}!important; width:40%; background-color:{{data['primary_color']}} !important;" class="text-center table-bordered" >
                                        <font style="text-align:center">
                                            <span style="font:25px lucida-console,sans-serif !important;" t-if="docs.state not in ['draft','sent']" >Sale Order:</span>
                                            <span style="font:25px lucida-console,sans-serif !important;" t-if="docs.state in ['draft','sent']">Sale Quotation:</span>
                                            <span style="font:25px lucida-console,sans-serif !important;" t-field="docs.name"/>
                                        </font>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-left">
                            <table class="table" style=" table-layout:fixed;">
                                <tr>
                                    <strong>Customer Address: </strong>
                                    <div t-attf-style="color:{{data['secondary_color']}}!important;">
                                        <span>
                                            <strong t-field="doc.partner_id"/>
                                        </span>
                                    </div>
                                    <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-6 text-right"  position="right">
                            <table class="table" style=" table-layout:fixed;margin-left:1250px">
                                <tr>
                                    <strong>
                                        <t t-if="docs.partner_shipping_id == docs.partner_invoice_id">Invoice and shipping address:</t>
                                        <t t-if="docs.partner_shipping_id != docs.partner_invoice_id">Invoice address:</t>
                                    </strong>
                                    <div t-attf-style="color:{{data['secondary_color']}} !important;">
                                        <span>
                                            <strong t-field="docs.partner_invoice_id"/>
                                        </span>
                                    </div>
                                    <div t-field="docs.partner_invoice_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True }'/>
                                    <p t-if="docs.partner_id.vat">VAT: <span t-field="docs.partner_id.vat"/></p>
                                    <div t-if="docs.partner_shipping_id != docs.partner_invoice_id" class="mt8">
                                        <strong>Shipping address:</strong>
                                        <div t-attf-style="{{data['secondary_color']}} !important;" t-field="doc.company_id"/>
                                        <div t-field="docs.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True,"phone_icons": True}'/>
                                        <p t-if="docs.partner_id.vat">VAT: <span t-field="docs.partner_id.vat"/></p>
                                    </div>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <table class="table table-bordered" t-attf-style="background-color:{{data['primary_color']}} !important; border-collapse: seperate; !important; border-spacing: 20px;!important; color:{{data['sale_font_color']}}!important;">
                                <tbody >
                                    <tr style="border-style: solid !important;">
                                        <td t-if="docs.client_order_ref" width="16%">Your Reference:<br/>
                                            <span style="border: 1px !important;border-color: #fff !important;" t-field="docs.client_order_ref"/>
                                        </td>
                                        <td t-if="docs.date_order" width="8%">Order Date:<br/>
                                            <span style="border: 1px !important;border-color: #fff !important;" t-field="docs.date_order" t-options="{'widget': 'date'}"/>
                                        </td>
                                        <td t-if="docs.expected_date" width="8%">Requested Date:<br/>
                                            <span style="border: 1px !important;border-color: #fff !important;" t-field="docs.expected_date" t-options="{'widget': 'date'}"/>
                                        </td>
                                        <td t-if="docs.delivery_count" width="16%">Delivery Method:<br/>
                                            <span style="border: 1px !important;border-color: #fff !important;" t-field="docs.delivery_count"/>
                                        </td>
                                        <td t-if="docs.payment_term_id" width="8%">Payment Term:<br/>
                                            <span style="border: 1px !important;border-color: #fff !important;" t-field="docs.payment_term_id"/>
                                        </td>
                                        <td  t-if="docs.fiscal_position_id" width="16%">Fiscal Position:<br/>
                                            <span style="border: 1px !important;border-color: #fff !important;" t-field="docs.fiscal_position_id"/>
                                        </td>
                                        <td  t-if="docs.user_id.name" width="8%">Salesperson:<br/>
                                            <span style="border: 1px !important;border-color: #fff !important;" t-field="docs.user_id"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <table class="table table-condensed">
                                <tr>
                                    <td>
                                        <strong>Note:</strong>
                                    </td>
                                    <td>
                                        <span t-field="docs.note"/><br/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="page">
                        <div class="col-xs-12">
                            <t t-set="has_tax" t-value="docs.order_line.filtered('tax_id')"/>
                            <t t-set="has_disc" t-value="docs.order_line.filtered('discount')"/>
                            <table class="table table-condensed table table-striped">
                                <thead t-attf-style="background-color:{{data['primary_color']}}!important; color:{{data['sale_font_color']}}!important;" >
                                    <tr>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="5%">
                                            <font t-aff-style="color:{{data['sale_font_color']}}!important;"> <i class="fa fa-sort-numeric-asc" aria-hidden="true"></i> Item</font>
                                        </th>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="10%">
                                           <font t-aff-style="color:{{data['sale_font_color']}}!important;"><i class="fa fa-barcode" aria-hidden="true"/> Part No.</font>
                                        </th>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="30%">
                                            <font><i class="fa fa-edit" aria-hidden="true"/> Part Name</font>
                                        </th>
                                        <t t-if="doc.company_id.add_product_image">
                                            <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center">
                                                <font><i class="fa fa-picture-o" aria-hidden="true"/> Product Image</font>
                                            </th>
                                        </t>
                                       <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="8%">
                                          <font><i class="fa fa-sort-amount-asc" aria-hidden="true"/> Quantity</font>
                                        </th> 
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="8%">
                                             <font><i class="fa fa-clock-o" aria-hidden="true"/> Delivery Dates</font>
                                        </th>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;" class="text-center" width="8%">
                                            <font>
                                                <i class="fa fa-gg-circle" aria-hidden="true"/> Unit Price<br/>
                                                <em>(<span t-field="doc.currency_id.name"/>)</em>
                                            </font>
                                        </th>
                                        <t t-if="has_disc">
                                            <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center">
                                                <font><i class="fa fa-percent" aria-hidden="true"/> Disc.(%)</font>
                                            </th>
                                        </t>
                                        <t t-if="has_tax">
                                            <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="15%">
                                                <font><i class="fa fa-tags" aria-hidden="true"/> Taxes</font>
                                            </th>
                                        </t>
                                        <th style="border: 1px !important; border-style: solid !important; border-color: #fff !important; vertical-align:middle;"  class="text-center" width="10%">
                                            <font>
                                                <i class="fa fa-dollar" aria-hidden="true"/> Ext. Price<br/>
                                                <em>(<span t-field="doc.currency_id.name"/>)</em>
                                            </font>
                                        </th>
                                    </tr>
                                
                                <tbody  class="sale_tbody">
                                    <t t-set="j" t-value="1"/>
                                    <t t-foreach="docs.order_line" t-as="l">
                                        <tr style="page-break-inside:avoid;margin-top:5%">
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;"  class="text-center">
                                                <span t-esc="j" />
                                                <t t-set="j" t-value="j+1" />
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;">
                                                <span t-field="l.product_id.barcode"/>
                                            </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;">
                                                <span t-field="l.product_id.name"/>
                                               </td>
                                            <t t-if="doc.company_id.add_product_image">
                                                <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" >
                                                    <span t-field="l.product_id.image" t-options='{"widget": "image"}'/>
                                                </td>
                                            </t>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                <span t-field="l.product_uom_qty"/>
                                                <span t-field="l.product_uom" groups="product.group_uom"/>
                                               </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                <span t-field="l.customer_lead"/>
                                               </td>
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                <span t-field="l.price_unit"/>
                                               </td>
                                            <t t-if="has_disc">
                                                <!-- <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line"> -->
                                                <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                    <span t-field="l.discount"/>
                                                </td>
                                            </t>
                                            <t t-if="has_tax">
                                                <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                                </td>
                                            </t>
                                            <!-- <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right" groups="sale.group_show_price_subtotal"> -->
                                            <td t-attf-style="border: 1px !important; border-style: solid !important;border-color:#FFFFFF !important;" class="text-right">
                                                <span t-field="l.price_subtotal" t-options='{ "widget": "monetary", "display_currency": docs.pricelist_id.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>  
                                </tbody>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <p style="page-break-before:avoid;"/>
                    <div class="row">
                        <div class="col-xs-4">
                            <table class="table table-striped" style="margin-left:190%">
                                <tr class="border-black" style="border:3px">
                                    <td  width="25%">
                                        <strong>Total Without Taxes</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="docs.amount_untaxed" t-field-options='{ "widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr >
                                    <td width="35%">Taxes</td>
                                    <td class="text-right">
                                        <span t-field="docs.amount_tax" t-field-options='{ "widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr t-attf-style="background-color:{{data['primary_color']}} !important; color:{{data['sale_font_color']}}!important;">
                                    <td width="35%">
                                        <strong>Total </strong>
                                        <em>(<span t-field="docs.currency_id.name"/>)</em>
                                    </td>
                                    <td class="text-right">
                                        <strong>
                                            <span t-field="docs.amount_total" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                        </strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <!-- <div class="col-xs-4 pull-right"  > -->
                        <div class="col-xs-4" style="margin-left:66%">
                            <t t-if="doc.company_id.add_signature == True">
                                <span>Signature :</span>
                                <span t-field="doc.company_id.signature_logo" t-options='{"widget": "image","style":"width: 100px; height: 100px; margin-right: 10px; display:inline" }'/>
                            </t>
                        </div>
                    </div>
                    
                    </div>
                    <p style="page-break-before:avoid;"/>
                    <div class="row" t-if="docs.state not in ['draft','sent']">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-3">
                            <table>
                                <tr>
                                    <td class="text-center">
                                        <p style="margin-right:700px"><h5><strong>APPROVED BY BUYER</strong></h5></p>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-2">
                        </div>
                        <div class="col-xs-3">
                            <table>
                                <tr>
                                    <td class="text-center">
                                        <p style="margin-left:300px"><h5><strong>APPROVED</strong></h5></p><br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
         
            <div class="footer" position="fixed;">
                <div style="border-top: 1px solid black;">
                <div class="text-muted">
                    <div class="row">
                    <div class="col-xs-3 text-left" position="left">
                        <table style="vertical-align:baseline;table-layout:fixed;">
                            <tr>
                                <td>
                                    <t t-if="doc.company_id.name_report_sale">
                                    <span t-field="doc.company_id.name_report_sale"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.date_report_prd">Date issued:
                                    <span t-field="doc.company_id.date_report_sale"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.rev_report_prd">Revision:
                                    <span t-field="doc.company_id.rev_report_sale"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-4 text-center" position="center">
                        <table style="vertical-align:baseline;margin-left:300px;table-layout:fixed;">
                            <tr>
                                <td>
                                    <t t-if="doc.company_id.partner_id.website">
                                    <i class="fa fa-globe" aria-hidden="true"/>
                                    <span t-field="doc.company_id.website"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.partner_id.email">
                                    <i class="fa fa-envelope-o" aria-hidden="true"/>
                                    <span t-field="doc.company_id.email"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    <t t-if="doc.company_id.partner_id.phone">
                                    <i class="fa fa-phone" aria-hidden="true"/>
                                    <span t-field="doc.company_id.phone"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                     </div>
                    <div class="col-xs-3 text-right" position="right">
                        <table style="vertical-align:baseline;margin-left:300px;table-layout:fixed;">
                            <tr>
                                <td>
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%b-%d %H:%M')"/>
                                </td>
                            </tr>
                             <tr>
                                 <td>
                                    <span t-field="docs.user_id"/> 
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    Page: <span class="page"/>/<span class="topage" />    
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                </div>
                </div>
            </div>
        </template>

         <template id="report_sale" inherit_id="sale.report_saleorder">
            <xpath expr="//t[@t-call='web.html_container']" position="replace">
                <t t-foreach="docs" t-as="o">
                    <t t-if="o.company_id.temp_selection == 'template1'">
                        <t t-call="erpvn_reports.sale_template1" t-lang="o.partner_id.lang"/>
                    </t>
                    <t t-if="o.company_id.temp_selection == 'template2'">
                        <t t-call="erpvn_reports.sale_template2" t-lang="o.partner_id.lang"/>
                    </t>
                    <t t-if="o.company_id.temp_selection== 'template3'">
                        <t t-call="erpvn_reports.sale_template3" t-lang="o.partner_id.lang"/>
                    </t>
                    <t t-if="o.company_id.temp_selection == 'template4'">
                        <t t-call="erpvn_reports.sale_template4" t-lang="o.partner_id.lang"/>
                    </t>
                    <t t-if="o.company_id.temp_selection == False">
                        <t t-call="sale.report_saleorder_document" t-lang="o.partner_id.lang"/>
                    </t>
                     <t t-if="o.company_id.temp_selection == 'template5'">
                        <t t-call="erpvn_reports.sale_template5" t-lang="o.partner_id.lang"/>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>