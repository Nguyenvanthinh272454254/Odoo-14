<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="production_template1">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <t t-if="o and 'company_id' in o">
                                <t t-set="company" t-value="o.company_id"/></t>
                            <t t-if="not o or not 'company_id' in o">
                                <t t-set="company" t-value="res_company"/></t>
                            <div class="header">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                    </div>
                                    <div class="col-xs-2 col-xs-offset-2 text-center">
                                        <span t-esc="company.name"/>
                                    </div>
                                    <div class="col-xs-2 col-xs-offset-3 text-right">
                                        <ul class="list-inline">
                                            <li>
                                                <span class="page"/>
                                            </li>
                                            <li>/</li>
                                            <li>
                                                <span class="topage"/>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure"/>
                            <div class="row">
                                <div class="col-xs-6">
                                    <h2># Production Order: 
                                        <span t-field="o.name"/>
                                    </h2>
                                </div>
                                <div class="col-xs-6">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 300, 50)" style="width:300px;height:50px" class="pull-right mb16"/>
                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-3">
                                    <strong>
                                        <span class="text-center">Barcode:</span>
                                    </strong>
                                    <br/>
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.product_id.barcode, 300, 50)" style="width:200px;height:50px"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Internal Reference:</strong>
                                    <br/>
                                    <span t-field="o.product_id.default_code"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Name:</strong>
                                    <br/>
                                    <span t-field="o.product_id.name"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Quantity:</strong>
                                    <br/>
                                    <span t-esc="'{0:,.0f}'.format(int(o.product_qty))"/>
                                    <span t-field="o.product_uom_id.name" groups="product.group_uom"/>
                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-3">
                                    <strong>Related Document:</strong>
                                    <br/>
                                    <span t-field="o.origin"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Scheduled Date:</strong>
                                    <br/>
                                    <span t-field="o.date_planned_start" t-options='{"widget": "date"}'/>
                                    <span t-if="o.date_planned_finished" t-options='{"widget": "date"}'> - 
                                        <span t-field="o.date_planned_finished" t-options='{"widget": "date"}'/></span>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Printing date:</strong>
                                    <br/>
                                    <span t-esc="time.strftime('%Y-%m-%d')"/>
                                </div>
                            </div>
                            <div t-if="o.workorder_ids">
                                <strong>Work Orders</strong>
                                <table class="table table-condensed table-striped">
                                    <tr>
                                        <td class="text-center" width="15%" style="vertical-align:middle;">
                                            <strong>#OP</strong>
                                        </td>
                                        <td class="text-center" style="vertical-align:middle;">
                                            <strong>WorkCenter</strong>
                                        </td>
                                        <td class="text-center" width="5%" style="vertical-align:middle;">
                                            <strong>Time</strong>
                                        </td>
                                        <td class="text-center" width="8%" style="vertical-align:middle;">
                                            <strong>Scrap Qty.</strong>
                                        </td>
                                        <td class="text-center" width="8%" style="vertical-align:middle;">
                                            <strong>Finish Qty.</strong>
                                        </td>
                                        <td class="text-center" width="8%" style="vertical-align:middle;">
                                            <strong>Operator</strong>
                                        </td>
                                        <td class="text-center" width="8%" style="vertical-align:middle;">
                                            <strong>QC</strong>
                                        </td>
                                        <td class="text-center" width="8%" style="vertical-align:middle;">
                                            <strong>NCR No.</strong>
                                        </td>
                                    </tr>
                                    <tr t-foreach="o.workorder_ids" t-as="line2">
                                        <td class="text-center" style="vertical-align:middle;">
                                            <span t-field="line2.name"/>
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line2.name, 600, 600)" style="width:200px;height:50px"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line2.workcenter_id.name"/>
                                            <br/>
                                            <span t-field="line2.operation_id.note"/>
                                        </td>
                                        <td class="text-center" style="vertical-align:middle;">
                                            <span t-field="line2.duration_expected"/>
                                        </td>
                                        <td class="text-center" style="vertical-align:bottom;">
                                            <span>__________</span>
                                        </td>
                                        <td class="text-center" style="vertical-align:bottom;">
                                            <span>__________</span>
                                        </td>
                                        <td class="text-center" style="vertical-align:bottom;">
                                            <span>__________</span>
                                        </td>
                                        <td class="text-center" style="vertical-align:bottom;">
                                            <span>__________</span>
                                        </td>
                                        <td class="text-center" style="vertical-align:bottom;">
                                            <span>__________</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <h3 t-if="o.move_raw_ids">Bill Of Material</h3>
                            <table class="table table-condensed" t-if="o.move_raw_ids">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Product</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Quantity</strong>
                                        </th>
                                        <th groups="stock.group_stock_multi_locations">
                                            <strong>Location</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="o.move_raw_ids">
                                        <tr>
                                            <td colspan="4">
                                                <strong>Products to Consume</strong>
                                            </td>
                                        </tr>
                                        <tr t-foreach="o.move_raw_ids" t-as="line">
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                            </td>
                                            <td>
                                                <t t-foreach="line.move_line_ids" t-as="ml">
                                                    <span t-field="ml.location_id"
                                                    groups="stock.group_stock_multi_locations"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div class="oe_structure"/>
                            <div class="footer">
                                <div class="text-center" style="border-top: 1px solid black;">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <t t-if="doc.company_id.partner_id.phone"><i class="fa fa-phone" aria-hidden="true"/> <span t-field="doc.company_id.phone"/></t>
                                        </div>
                                        <div class="col-xs-4 col-xs-offset-1 text-center">
                                            <t t-if="doc.company_id.partner_id.email"><i class="fa fa-envelope-o" aria-hidden="true"/> <span t-field="doc.company_id.email"/></t>
                                        </div>
                                        <div class="col-xs-3 col-xs-offset-1 text-right">
                                            <t t-if="doc.company_id.partner_id.website"><i class="fa fa-globe" aria-hidden="true"/> <span t-field="doc.company_id.website"/></t>
                                        </div>
                                    </div>
                                    <div class="text-muted">
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <t t-if="doc.company_id.name_report_prd"><span t-field="doc.company_id.name_report_prd"/></t>
                                            </div>
                                            <div class="col-xs-4 col-xs-offset-1 text-center">
                                                <t t-if="doc.company_id.date_report_prd">Date issued: <span t-field="doc.company_id.date_report_prd"/></t>
                                            </div>
                                            <div class="col-xs-3 col-xs-offset-1 text-right">
                                                <t t-if="doc.company_id.rev_report_prd">Revision: <span t-field="doc.company_id.rev_report_prd"/></t>
                                            </div>
                                        </div>
                                        Page: <span class="page"/> / <span class="topage"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
