<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="product_label_template2">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="row">
                        <table>
                            <tbody>
                                <tr>
                                    <td colspan="2" class="col-xs-8 danger">
                                        <t t-if="product.default_code">
                                            [<strong t-field="product.default_code"/>]
                                        </t>
                                        <strong t-field="product.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="vertical-align: middle;" class="col-xs-5">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)" style="width:100%;height:20%;"/>
                                        <span t-field="product.barcode"/>
                                    </td>
                                    <td style="text-align: center;" class="col-xs-7">
                                        <h4>
                                            <strong t-field="product.company_id.currency_id.symbol"/>
                                            <strong t-field="product.list_price"/>
                                        </h4>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>