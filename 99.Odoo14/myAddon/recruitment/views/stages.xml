<odoo>
    <record model="ir.ui.view" id="stages_tree_view">
        <field name="name">stages list</field>
        <field name="model">stages</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
          </tree>
        </field>
      </record>


    <record model="ir.actions.act_window" id="actions_stages">
        <field name="name">stages window</field>
        <field name="res_model">stages</field>
        <field name="view_mode">tree,form</field>
      </record>
</odoo>