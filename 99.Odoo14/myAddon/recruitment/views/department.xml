<odoo>
    <record model="ir.ui.view" id="department_tree_view">
        <field name="name">department list</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
          </tree>
        </field>
      </record>


    <record model="ir.actions.act_window" id="actions_department">
        <field name="name">department window</field>
        <field name="res_model">department</field>
        <field name="view_mode">tree,form</field>
      </record>
</odoo>