<odoo>

    <record id="intrutor_form_view" model="ir.ui.view">
        <field name="name">intrutor.form.view</field>
        <field name="model">intrutor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="images">
                        <group>
                            <field name="name" />
                            <field name="description" />
                            <!-- <field name="intrutor_id"/>
                              <field name="field_name_ids"/> -->
                        </group>
                        <group>
                            <field name="state" />
                            <field name="duration" />
                            <field name="taken_seats" />

                            <field name="state_date" />
                            <field name="seats" />
                            <field name="ex_price" />
                        </group>
                    </group>

                    <notebook>

                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="About"> 
                                This is an exxample of notebook
                          </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="intrutor_tree_view" model="ir.ui.view">
        <field name="name">intrutor.tree.view</field>
        <field name="model">intrutor</field>
        <field name="arch" type="xml">
            <tree string="Session Tree" decoration-bf="duration&lt;5" decoration-it="duration&gt;15" editable="bottom">
                <!-- decoration-info="state == 'draft'"
              decoration-danger="state == 'help_needed'"
              decoration-bf="state=='busy'" -->
                <field name="name" />
                <field name="description" />
                <!-- <field name="intrutor_id" /> -->
                <!-- <field name="field_name_ids" /> -->
                <!-- <field name="state" /> -->
                <field name="duration" invisible="1" />
                <field name="taken_seats" widget="progressbar" />

                <!-- <field name="state_date" /> -->
                <!-- <field name="seats" /> -->
                <!-- <field name="ex_price" /> -->

                <button name="custom_remove" type="object" string="Remove" class="oe_highlight" />
            </tree>

        </field>
    </record>


    <record model="ir.actions.act_window" id="action_intrutor">
        <field name="name">intrutor manager</field>
        <field name="res_model">intrutor</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>


    <menuitem name="intrutor" id="intrutor_list_menu" parent="employee_menu_root" action="action_intrutor" />

</odoo>